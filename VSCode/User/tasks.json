{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run Python Script",
            "type": "shell",
            "command": "${config:python.pythonPath}",
            "args": [
                "${file}"
            ],
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "new",
                "echo": false,
                "focus": true
            },
            "problemMatcher": [
                "$eslint-compact"
            ]
        }
    ]
}
